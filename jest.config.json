{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "!packages/*/src/**/index.{js,ts,tsx}",
    "!packages/*/src/**/messages.{js,ts,tsx}",
    "packages/*/src/**/*.{js,ts,tsx}"
  ],
  "coveragePathIgnorePatterns": ["/cjs", "/esm", "/node_modules/", "/types", "/utils"],
  "moduleFileExtensions": ["js", "json", "ts", "tsx"],
  "reporters": ["default"],
  "roots": ["<rootDir>/packages"],
  "setupFilesAfterEnv": ["<rootDir>/setupTests.ts"],
  "testPathIgnorePatterns": ["/cjs", "/esm", "/node_modules/", "/types"],
  "testRegex": "(\\.(test|spec))\\.(ts|tsx)$",
  "timers": "fake",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "verbose": true
}
